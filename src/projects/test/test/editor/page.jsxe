<Oak-Page id="editor" title="Editor Package Test" style={{ padding: "1em" }}>
  <h2>Editor Test</h2>
  <Editor-Form
    data={{
      foo: "bar",
      select: "yes",
      checker: true,
      yesno: "yes"
    }}

    schema={{
      foo: {
        required: true
      }
    }}

    errors={{
      foo:"NOOOO"
    }}

    controlProps={{
      inline: false,
      labelOn: "left",
      labelProps: {
        style: { width: 200 },
      }
    }}

    style={{
      border: "1px solid transparent"
    }}>

    <Editor-Output name="foo" label="Output Field:"/>
    <Editor-Text name="foo" label="Text Field:" size="30"/>
    <Editor-Password name="foo" label="Password Field:" tabIndex="20" labelProps={{style:{color:"#999"}}}/>

    <Editor-Checkbox name="checker" label="Checkbox"/>
    <Editor-Output name="checker" label="Checkbox value:"/>

    <Editor-Checkbox name="yesno" label="Yes/No Checkbox" trueValue="yes" falseValue="no"/>
    <Editor-Output name="yesno" label="Yes/No value:"/>

    <Editor-Checkbox name="trueUndefined" label="True/undefined" falseValue={undefined}/>
    <Editor-Output name="trueUndefined" label="True/undefined value:"/>

    <Editor-Select name="select" label="Select:" options={["yes","no"]}/>
    <Editor-Output name="select" label="Select value:"/>

    <Editor-Select name="select" label="Required Select:" required options={{ yes: "YES", no: "NO" }}/>
    <Editor-Output name="select" label="Required Select value:"/>


    <h5>Wrapped input field</h5>
    <Editor-Control name="foo" label="Foo:">
      <input/>
    </Editor-Control>

  </Editor-Form>
</Oak-Page>
